<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="facebook test suite">
    <parameter name="browser" value="Chrome"></parameter>
    <parameter name="website" value="Facebook"></parameter>
    <test name="facebook test">
        <classes>
            <class name="com.globant.AppTest">
                <methods>
                    <include name="launchWebsite"></include>
                    <include name="loginAccount"></include>
                    <include name="showProfile"></include>
                    <include name="showFriends"></include>
                    <include name="selectFriend"></include>
                    <include name="deleteFriend"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Facebook2 test">
        <classes>
            <class name="com.globant.AppTest">
                <methods>
                    <include name="loginAccount"></include>
                    <include name="showProfile"></include>
                    <include name="editProfile"></include>
                    <include name="changeProfilePicture"></include>
                </methods>
            </class>
        </classes>
    </test>
</suite>